
{
  "compilerOptions": {
    "jsx": "react-native",       // for React 17+
    "allowJs": true,          // (optional) if mixing JS and TS
    "target": "ES2020",                 // or "ESNext"
    "module": "ESNext",                 // or "preserve"
    "moduleResolution": "bundler",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "backend/**/*", 
    "frontend/**/*", 
    "**/*.ts",
    "**/*.tsx",
    ],
   "ts-node": {
    "skipIgnore": true,
    "transpileOnly": true
  }
}
